{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Entrypoint",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/project",
            "args": ["--config-name", "${input:configDefault}"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "windows": {
                "program": "${workspaceFolder}/.venv/Script/project.exe"
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "configDefault",
            "description": "Specify configuration file.",
            "default": "example_1"
        }
    ]
}